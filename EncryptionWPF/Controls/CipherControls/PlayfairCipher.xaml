<UserControl x:Class="EncryptionWPF.Controls.CipherControls.PlayfairCipherUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EncryptionWPF.Controls.CipherControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="KeyValueLabel"
               Height="50"
               VerticalAlignment="Top"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               FontSize="24"
               Content="{Binding Text, ElementName=KeyValueSelector}"
               ContentStringFormat="Key = {0}"/>

        <TextBox Name="KeyValueSelector"
                 Grid.Row="2"
                 Margin="0 -150 0 0"
                 VerticalAlignment="Center"
                 TextAlignment="Center"
                 PreviewTextInput="KeyValueSelector_PreviewTextInput"/>

    </Grid>
</UserControl>
